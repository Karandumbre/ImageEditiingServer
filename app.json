{
  "expo": {
    "name": "Persona",
    "slug": "Persona",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Persona.png",
    "scheme": "persona",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash_icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "androidStatusBar": {
      "backgroundColor": "#212121",
      "translucent": true
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.ask.persona",
      "supportsTablet": true,
      "config": {
        "googleMobileAdsAppId": "" // sample id, replace with your own
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "android": {
      "package": "com.ask.persona",
      "config":{      
        "googleMobileAdsAppId": "ca-app-pub-3945058741555501~9994131281" // sample id, replace with your own
      }
    }
  }
}
